<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!-- Define targets -->
	<targets>
		<target xsi:type="File" name="fileTarget" fileName="C:\Users\princedelen\source\repos\Lab_9-WindowsFormsApp1Update\Lab_8-WindowsForms\Logs\${shortdate}.xml"/>
		<layout xsi:type="XmlLayout">
			<attribute name="timestamp" layout="${longdate}" />
			<attribute name="level" layout="${level:uppercase=true}" />
			<attribute name="logger" layout="${logger}" />
			<element name="message" layout="${message}" />
		</layout>
	</targets>
	<rules>
		<logger name="*" minlevel="Trace" writeTo="fileTarget" />
	</rules>
</nlog>